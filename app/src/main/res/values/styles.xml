<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CategoryListName" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_category_list_item_name</item>
        <item name="android:layout_margin">@dimen/layout_margin_category_list_item_name</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FoodListName" parent="AppTheme">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_food_list_item_name</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FoodListIG">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_food_list_item_ig</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MeasurementList">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_measurement_list_item</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MeasurementListHeader" parent="MeasurementList">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_measurement_list_header</item>

    </style>

    <style name="DetailsInfoLayout">
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">left|center_vertical</item>


    </style>

    <style name="DetailsMainTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DetailsTitles">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="DetailsInfo">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>

    </style>

    <style name="MeasurementTableTitle" parent="DetailsMainTitle">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="category_list_title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">64dp</item>
    </style>

    <style name="myAboutInfo" parent= "GIInfo">
        <item name="android:drawableStart">@drawable/ic_right_arrow</item>
    </style>

    <style name="myAboutInfoLink" parent= "GIInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorLightBlue</item>
    </style>

    <style name="myAboutTitle" parent= "AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="GIInfoTitle" parent="GIInfo">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>


    </style>

    <style name="GIInfo" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="GIInfoLink" parent="GIInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorLightBlue</item>


    </style>
</resources>