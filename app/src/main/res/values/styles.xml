<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CategoryListName" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_category_list_item_name</item>
        <item name="android:layout_margin">@dimen/layout_margin_category_list_item_name</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FoodListName" parent="AppTheme">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_food_list_item_name</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FoodListIG">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_food_list_item_ig</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>