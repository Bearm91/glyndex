<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/ll_measurement_item">

    <TextView
        android:id="@+id/tv_measurement_name"
        style="@style/MeasurementList"
        android:layout_height="wrap_content"
        tools:text="@string/measurement_name_example"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_carbs_unit"
        style="@style/MeasurementList"
        android:layout_height="match_parent"
        tools:text="@string/measurement_ch_example"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/icon_custom_measurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person"
        android:backgroundTint="@color/transparent"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"/>

</LinearLayout>