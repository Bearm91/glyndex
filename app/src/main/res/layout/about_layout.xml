<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_app_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_info"
        style="@style/myAboutInfo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gi_source"
            style="@style/GIInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_source_main_about" />

        <TextView
            android:id="@+id/gi_source_link"
            style="@style/GIInfoLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_source_link" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_current_version"
        style="@style/myAboutInfo"/>

    <TextView
        android:id="@+id/tv_app_developer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_info_developer"
        style="@style/myAboutInfo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/GIInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_info_icons" />

        <TextView
            style="@style/GIInfoLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_info_icons_1" />

        <TextView
            style="@style/GIInfoLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_info_icons_2" />

    </LinearLayout>

</LinearLayout>